{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todo form:</h1>
    <form action="{{ path('add') }}" method="post">
        <div class="form-group">
            <label for="message">Todo input</label>
            <input id="message" class="form-control" type="text" name="message" placeholder="Enter message">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <br>
    <br>

    <h1>Todo list:</h1>
    <ul>
        {% for todo in todos %}
            <li style="padding-bottom: 10px; list-style: none;">
                <span class="{% if todo.status %}done{% endif %} ">{{ todo.id }} - {{ todo.message }}</span>
                &nbsp;&nbsp;
                <form action="{{ path('edit', {'id': todo.id}) }}" method="post" style="display: inline-block">
                    <button type="submit">{%  if todo.status  %}Not{% endif %} Done</button>
                </form>
                <form action="{{ path('remove', {'id': todo.id}) }}" method="post" style="display: inline-block">
                    <button type="submit">Delete</button>
                </form>
            </li>
        {% endfor %}
    </ul>
{% endblock %}